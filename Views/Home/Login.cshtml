@model DP.Models.LoginModel
@{
    ViewData["Title"] = "Вход";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/additional-methods.min.js"></script>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            background: linear-gradient(to left, #005baa, #ffffff, #d52b1e);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background-color: rgba(255,255,255,0.95);
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
            width: 100%;
            max-width: 450px;
            text-align: center;
            border-top: 5px solid #0056b3;
        }

        .login-form {
            margin-top: 25px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #333;
        }

        .form-input {
            width: 100%;
            padding: 12px 15px;
            font-size: 16px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            box-sizing: border-box;
        }

            .form-input:focus {
                border-color: #0056b3;
                box-shadow: 0 0 0 3px rgba(0,86,179,0.1);
                outline: none;
            }

        .field-error {
            color: #d52b1e;
            font-size: 14px;
            margin-top: 5px;
            display: none;
        }

        .btn-submit {
            background-color: #d52b1e;
            color: white;
            padding: 14px;
            width: 100%;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 600;
            transition: background-color 0.3s;
            margin-top: 10px;
        }

            .btn-submit:hover {
                background-color: #b82217;
            }

        .alert {
            background-color: #f8d7da;
            color: #721c24;
            padding: 15px;
            border-radius: 4px;
            text-align: left;
            border: 1px solid #f5c6cb;
            display: none;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>Вход</h1>
        <p>Нет аккаунта? <a href="/home/regin" class="regin-link">Зарегистрироваться</a></p>

        <form id="loginForm" asp-action="Login" method="post" class="login-form">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="Email" class="form-label">Email</label>
                <input type="email" name="Email" id="Email" class="form-input" placeholder="Введите ваш email" />
                <label id="Email-error" class="field-error" for="Email" style="display:none;"></label>
            </div>

            <div class="form-group">
                <label for="Password" class="form-label">Пароль</label>
                <input type="password" name="Password" id="Password" class="form-input" placeholder="Введите пароль" />
                <label id="Password-error" class="field-error" for="Password" style="display:none;"></label>
            </div>

            <button type="submit" class="btn-submit">Войти</button>
        </form>

        <div id="result" class="alert" style="display:none;"></div>
    </div>

    <script type="text/javascript">
        $(document).ready(function() {
            $("#loginForm").validate({
                rules: {
                    Email: {
                        required: true,
                        email: true
                    },
                    Password: {
                        required: true
                    }
                },
                messages: {
                    Email: {
                        required: "Email обязателен для заполнения",
                        email: "Введите корректный email"
                    },
                    Password: {
                        required: "Пароль обязателен для заполнения"
                    }
                },
                errorPlacement: function(error, element) {
                    var errorId = element.attr("id") + "-error";
                    $("#" + errorId).text(error.text()).show();
                },
                success: function(label, element) {
                    var errorId = $(element).attr("id") + "-error";
                    $("#" + errorId).hide();
                },
                submitHandler: function(form) {
                    $("#result").hide().empty();

                    $.ajax({
                        type: "POST",
                        url: $(form).attr("action"),
                        data: $(form).serialize(),
                        dataType: "json",
                        success: function(response) {
                            if (response.success) {
                                window.location.href = response.redirectUrl;
                            } else {
                                $("#result").html(response.message).show();
                            }
                        },
                        error: function() {
                            $("#result").html("Ошибка при отправке данных. Попробуйте позже.").show();
                        }
                    });
                    return false;
                }
            });
        });
    </script>
</body>
</html>