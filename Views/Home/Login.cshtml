@model DP.Models.LoginModel
@{
    ViewData["Title"] = "Вход";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- jQuery Validate -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <!-- дополнительные методы (для pattern и т.п.) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/additional-methods.min.js"></script>

    <style>
        /* тот же градиентный фон и центровка, что на странице регистрации */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            background: linear-gradient(to left, #005baa, #ffffff, #d52b1e);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background-color: rgba(255,255,255,0.95);
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
            width: 100%;
            max-width: 450px;
            text-align: center;
            border-top: 5px solid #0056b3;
        }

        .login-form {
            margin-top: 25px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #333;
        }

        .form-input {
            width: 100%;
            padding: 12px 15px;
            font-size: 16px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            box-sizing: border-box;
        }

            .form-input:focus {
                border-color: #0056b3;
                box-shadow: 0 0 0 3px rgba(0,86,179,0.1);
                outline: none;
            }

        .field-error {
            color: #d52b1e;
            font-size: 14px;
            margin-top: 5px;
            display: none;
        }

        .btn-submit {
            background-color: #d52b1e;
            color: white;
            padding: 14px;
            width: 100%;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 600;
            transition: background-color 0.3s;
            margin-top: 10px;
        }

            .btn-submit:hover {
                background-color: #b82217;
            }

        .alert {
            background-color: #f8d7da;
            color: #721c24;
            padding: 15px;
            border: 1px solid #f5c6cb;
            border-radius: 4px;
            text-align: left;
            display: none;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>Вход</h1>

        <p>Нет аккаунта? <a href="/home/regin" class="regin-link">Зарегистрироваться</a></p>

        <form asp-action="Login" method="post" asp-antiforgery="true" class="login-form">
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-input" name="Email" placeholder="Введите ваш email" />
                <span asp-validation-for="Email" class="validation-error text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-input" name="Password" placeholder="Введите пароль" />
                <span asp-validation-for="Password" class="validation-error text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">Войти</button>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
</body>
</html>
