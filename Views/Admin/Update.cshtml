@model DP.Models.Booking

<!DOCTYPE html>
<html lang="ru">
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.7-beta.19/jquery.inputmask.min.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Редактирование заявки</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #0056b3 0%, #d52b1e 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .booking-container {
            background-color: #fff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 500px;
            border-top: 5px solid #0056b3;
            position: relative;
            overflow: hidden;
        }

            .booking-container::before {
                content: "";
                position: absolute;
                top: 0;
                right: 0;
                width: 40px;
                height: 40px;
                background-color: #d52b1e;
                clip-path: polygon(0 0, 100% 0, 100% 100%);
            }

        h1 {
            font-size: 24px;
            color: #0056b3;
            margin-bottom: 25px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            text-align: center;
        }

        .form-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            font-weight: 500;
            color: #333;
            display: block;
            margin-bottom: 8px;
            font-size: 14px;
        }

        select, input {
            width: 100%;
            padding: 12px 15px;
            font-size: 15px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            box-sizing: border-box;
            transition: all 0.3s ease;
        }

            select:focus, input:focus {
                border-color: #0056b3;
                outline: none;
                box-shadow: 0 0 0 3px rgba(0, 86, 179, 0.1);
            }

        .btn-submit {
            background-color: #d52b1e;
            color: white;
            border: none;
            padding: 14px;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            font-weight: 600;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 10px;
        }

            .btn-submit:hover {
                background-color: #b82217;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(213, 43, 30, 0.3);
            }

        .btn {
            display: inline-block;
            background-color: #0056b3;
            color: white;
            padding: 12px 20px;
            border-radius: 4px;
            text-decoration: none;
            font-weight: 500;
            transition: background-color 0.3s;
            margin-top: 15px;
            width: 100%;
            text-align: center;
            box-sizing: border-box;
        }

            .btn:hover {
                background-color: #003d82;
            }

        .alert {
            margin-top: 20px;
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            padding: 15px;
            border-radius: 4px;
            text-align: left;
        }

            .alert p {
                margin: 5px 0;
            }

        @@media (max-width: 768px) {
            .booking-container {
                padding: 30px 20px;
            }

            h1 {
                font-size: 20px;
            }

            select, input {
                padding: 10px 12px;
                font-size: 14px;
            }

            .btn-submit, .btn {
                padding: 12px;
                font-size: 15px;
            }
        }

        @@media (max-width: 480px) {
            body {
                padding: 15px;
            }

            .booking-container {
                padding: 25px 15px;
            }
        }
    </style>
</head>
<body>
    <div class="booking-container">
        <h1>Изменение заявки</h1>
        <form method="post" class="form-container">
            @if (Model != null)
            {
                <input type="hidden" name="ID" value="@Model.ID" />
            }

            <div class="form-group">
                <label for="profproba">Выберите квантум:</label>
                <select id="profproba" name="ProfProbaId" required>
                    @if (ViewBag.ProfProby != null && ViewBag.ProfProby is IEnumerable<DP.Models.ProfProba>)
                    {
                        foreach (var profproba in (IEnumerable<DP.Models.ProfProba>)ViewBag.ProfProby)
                        {
                            <option value="@profproba.Id"
                                    selected="@(profproba.Id == Model?.ProfProbaId)">
                                @profproba.Name
                            </option>
                        }
                    }
                    else
                    {
                        <option disabled selected>Нет доступных квантумов</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="event">Выберите событие:</label>
                <select id="event" name="EventID" required>
                    @if (ViewBag.Events != null && ViewBag.Events is IEnumerable<DP.Models.Event>)
                    {
                        foreach (var evt in (IEnumerable<DP.Models.Event>)ViewBag.Events)
                        {
                            <option value="@evt.ID"
                                    selected="@(evt.ID == Model?.EventId)">
                                @evt.Name
                            </option>
                        }
                    }
                    else
                    {
                        <option disabled selected>Нет доступных событий</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="FullName">ФИО:</label>
                <input type="text"
                       value="@(Model?.FullName ?? "")"
                       id="FullName"
                       name="FullName"
                       required />
            </div>

            <div class="form-group">
                <label for="Email">Email:</label>
                <input type="email"
                       value="@(Model?.Email ?? "")"
                       id="Email"
                       name="Email"
                       required />
            </div>

            <div class="form-group">
                <label for="PhoneNumber">Телефон:</label>
                <input type="tel"
                       value="@(Model?.PhoneNumber ?? "")"
                       id="phone"
                       name="PhoneNumber"
                       placeholder="8(XXX)-XXX-XX-XX"
                       required />
            </div>

            <div class="form-group">
                <label for="SchoolName">Учебное заведение:</label>
                <input type="text"
                       value="@(Model?.SchoolName ?? "")"
                       id="SchoolName"
                       name="SchoolName"
                       required />
            </div>

            <div class="form-group">
                <label for="BookingDate">Дата бронирования:</label>
                <input type="date"
                       value="@(Model?.BookingDate.ToString("yyyy-MM-dd") ?? "")"
                       id="BookingDate"
                       name="BookingDate"
                       required />
            </div>

            <div class="form-group">
                <label for="TimeRange">Количество человек:</label>
                <input type="text"
                       value="@(Model?.TimeRange ?? "")"
                       id="TimeRange"
                       name="TimeRange"
                       required />
            </div>

            <button type="submit" class="btn-submit">Сохранить заявку</button>
            <a href="/Admin" class="btn btn-secondary" style="margin-left: 10px;">Вернуться назад</a>
        </form>
        @section Scripts {
            <script>
                $(document).ready(function() {
                    // Маска для телефона
                    $("#PhoneNumber").inputmask("+7(999)999-99-99");

                    // Инициализация текущих значений
                    const currentProfProbaId = '@Model.ProfProbaId';
                    const currentEventId = '@Model.EventId';

                    if (currentProfProbaId) {
                        loadEvents(currentProfProbaId, currentEventId);
                    }

                    // Динамическая загрузка событий
                    $("#profProbaSelect").change(function() {
                        const profProbaId = $(this).val();
                        loadEvents(profProbaId);
                    });

                    function loadEvents(profProbaId, selectedEventId = null) {
                        const $eventDropdown = $("#eventSelect");

                        $eventDropdown.empty().prop("disabled", true);
                        $eventDropdown.append($('<option></option>').val("").text("Загрузка..."));

                        if (profProbaId) {
                            $.getJSON("/Admin/GetEventsByProfProba", { profProbaId: profProbaId }, function(data) {
                                $eventDropdown.empty();
                                $eventDropdown.append($('<option></option>').val("").text("Выберите событие"));

                                $.each(data, function(i, event) {
                                    const isSelected = selectedEventId && event.id == selectedEventId;
                                    $eventDropdown.append(
                                        $('<option></option>')
                                            .val(event.id)
                                            .text(event.name)
                                            .prop('selected', isSelected)
                                    );
                                });

                                $eventDropdown.prop("disabled", false);
                            });
                        }
                    }
                });
            </script>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
    </div>
</body>
</html>