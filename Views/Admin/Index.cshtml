@model DP.Controllers.AdminController.AdminDashboardViewModel


<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css">
    <title>Панель администратора</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #f0f6fc 0%, #d4e3fc 100%);
            padding: 20px;
            min-height: 100vh;
            margin: 0;
        }

        h1, h2 {
            color: #0056b3;
            text-align: center;
            margin: 25px 0;
        }

        h1 {
            font-size: 28px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-bottom: 2px solid #d52b1e;
            padding-bottom: 10px;
            display: inline-block;
        }

        h2 {
            font-size: 22px;
            font-weight: 500;
            margin-top: 40px;
            text-align: left;
            padding-left: 15px;
            border-left: 4px solid #0056b3;
        }

        .button-container {
            text-align: center;
            margin: 30px 0;
        }

        a.export-button {
            background-color: #d52b1e;
            color: white;
            padding: 12px 25px;
            border-radius: 4px;
            text-decoration: none;
            font-weight: 500;
            transition: background-color 0.3s;
            display: inline-block;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            a.export-button:hover {
                background-color: #b82217;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        th, td {
            padding: 14px 16px;
            text-align: center;
            border: 1px solid #e0e0e0;
        }

        th {
            background-color: #0056b3;
            color: white;
            font-weight: 600;
            font-size: 15px;
        }

        tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        tr:hover {
            background-color: #e9f0ff;
        }

        td button, .btn {
            padding: 8px 12px;
            border-radius: 4px;
            font-size: 14px;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
            margin: 3px;
            font-weight: 500;
            min-width: 100px;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .btn-warning {
            background-color: #ffc107;
            color: #212529;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-edit {
            background-color: #17a2b8;
            color: white;
            display: inline-block;
            padding: 8px 12px;
            text-decoration: none;
            border-radius: 4px;
            margin: 3px;
        }

        td button:hover, .btn:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }

        a[href*="DownloadFile"] {
            color: #0056b3;
            text-decoration: none;
            transition: color 0.2s;
        }

            a[href*="DownloadFile"]:hover {
                color: #d52b1e;
                text-decoration: underline;
            }

        /* Стили для статусов */
        tr[style*="background-color:#f2f2f2"] td {
            color: #333;
        }

        tr[style*="background-color:#c1ffa55e"] td {
            color: #2a6817;
        }

        tr[style*="background-color:#ffa5a557"] td {
            color: #8b0000;
        }

        @@media (max-width: 992px) {
            table {
                display: block;
                overflow-x: auto;
            }

            th, td {
                padding: 10px 12px;
                font-size: 14px;
            }

                td button, .btn {
                    min-width: auto;
                    padding: 6px 8px;
                    font-size: 13px;
                    margin: 2px;
                }
        }

        @@media (max-width: 768px) {
            h1 {
                font-size: 24px;
            }

            h2 {
                font-size: 20px;
            }

            body {
                padding: 15px;
            }

            .button-container {
                margin: 20px 0;
            }

            a.export-button {
                padding: 10px 20px;
                font-size: 14px;
            }
        }

        @@media (max-width: 576px) {
            h1 {
                font-size: 20px;
            }

            h2 {
                font-size: 18px;
            }

            th, td {
                padding: 8px 10px;
                font-size: 13px;
            }
        }
    </style>
</head>
<body>
    <h1 class="centered">Заявки клиентов</h1>

    <!-- Предварительные заявки -->
    @if (Model != null && Model.Bookings != null && Model.Bookings.Any())
    {
        <h2>Предварительные заявки</h2>
        <table>
            <thead>
                <tr>
                    <th>Профпроба</th>
                    <th>ФИО</th>
                    <th>Email</th>
                    <th>Телефон</th>
                    <th>Учебное заведение</th>
                    <th>Дата</th>
                    <th>Кол-во человек</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model.Bookings)
                {
                    <tr style="@(booking.Status == "Новое" ? "background-color:#f2f2f2;" : booking.Status == "Подтверждено" ? "background-color:#c1ffa55e;" : booking.Status == "Отклонено" ? "background-color:#ffa5a557;" : "")">
                        <td>@booking.ProfProba?.Name</td>
                        <td>@booking.FullName</td>
                        <td>@booking.Email</td>
                        <td>@booking.PhoneNumber</td>
                        <td>@booking.SchoolName</td>
                        <td>@booking.BookingDate.ToString("dd.MM.yyyy")</td>
                        <td>@booking.TimeRange</td>
                        <td>@booking.Status</td>
                        <td>
                            @if (booking.Status == "Новое")
                            {
                                <form method="post" action="/Admin/Confirm">
                                    <input type="hidden" name="id" value="@booking.ID" />
                                    <button type="submit">Подтвердить</button>
                                </form>
                                <form method="post" action="/Admin/Reject">
                                    <input type="hidden" name="id" value="@booking.ID" />
                                    <button type="submit">Отклонить</button>
                                </form>
                                <form method="get" action="/Admin/Update">
                                    <input type="hidden" name="id" value="@booking.ID" />
                                    <button type="submit">Редактировать</button>
                                </form>
                            }
                            @if (booking.Status == "Подтверждено")
                            {
                                <form method="get" action="/Admin/Update">
                                    <input type="hidden" name="id" value="@booking.ID" />
                                    <button type="submit">Редактировать</button>
                                </form>
                            }
                            <form method="post" action="/Admin/Delete">
                                <input type="hidden" name="id" value="@booking.ID" />
                                <button type="submit" onclick="return confirm('Вы уверены, что хотите удалить эту заявку?');">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <!-- Заявки на экскурсии -->
    @if (Model.Excursions != null && Model.Excursions.Any())
    {
        <h2>Заявки на экскурсии</h2>
        <table>
            <thead>
                <tr>
                    <th>ФИО</th>
                    <th>Email</th>
                    <th>Школа</th>
                    <th>Дата</th>
                    <th>Время</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var excursion in Model.Excursions)
                {
                    <tr style="@(excursion.Status == "Новое" ? "background-color:#f2f2f2;" : excursion.Status == "Подтверждено" ? "background-color:#c1ffa55e;" : excursion.Status == "Отклонено" ? "background-color:#ffa5a557;" : "")">
                        <td>@excursion.FullName</td>
                        <td>@excursion.Email</td>
                        <td>@excursion.SchoolName</td>
                        <td>@excursion.BookingDate.ToShortDateString()</td>
                        <td>@excursion.TimeRange</td>
                        <td>@excursion.Status</td>
                        <td>
                            <form method="post" action="/Admin/ConfirmExcursion" style="display:inline;">
                                <input type="hidden" name="id" value="@excursion.Id" />
                                <button type="submit" class="btn btn-success btn-sm">Подтвердить</button>
                            </form>
                            <form method="post" action="/Admin/RejectExcursion" style="display:inline;">
                                <input type="hidden" name="id" value="@excursion.Id" />
                                <button type="submit" class="btn btn-secondary btn-sm">Отклонить</button>
                            </form>
                            <form method="get" action="/Admin/EditExcursion" style="display:inline;">
                                <input type="hidden" name="id" value="@excursion.Id" />
                                <button type="submit" class="btn btn-warning btn-sm">Редактировать</button>
                            </form>
                            <form method="post" action="/Admin/DeleteExcursion" style="display:inline;" onsubmit="return confirm('Удалить экскурсию?');">
                                <input type="hidden" name="id" value="@excursion.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <!-- Окончательные заявки -->
    @* <h2>Окончательные заявки (с прикрепленными файлами)</h2>
    @if (Model.FinalBookings != null && Model.FinalBookings.Any())
