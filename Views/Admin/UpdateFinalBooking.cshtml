@using DP.Models
@{
    ViewData["Title"] = "Прикрепить файлы к заявке";
    var userBookings = ViewBag.UserBookings as List<Booking>;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #0056b3 0%, #d52b1e 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .booking-container {
            background-color: #fff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 500px;
            border-top: 5px solid #0056b3;
            position: relative;
            overflow: hidden;
        }

            .booking-container::before {
                content: "";
                position: absolute;
                top: 0;
                right: 0;
                width: 40px;
                height: 40px;
                background-color: #d52b1e;
                clip-path: polygon(0 0, 100% 0, 100% 100%);
            }

        h1 {
            font-size: 24px;
            color: #0056b3;
            margin-bottom: 25px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 25px;
            text-align: left;
        }

        label {
            font-weight: 500;
            color: #333;
            display: block;
            margin-bottom: 10px;
            font-size: 15px;
        }

        input[type="file"] {
            width: 100%;
            padding: 12px;
            font-size: 15px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            box-sizing: border-box;
            transition: all 0.3s ease;
            background-color: #f8f9fa;
        }

            input[type="file"]:focus {
                border-color: #0056b3;
                outline: none;
                box-shadow: 0 0 0 3px rgba(0, 86, 179, 0.1);
                background-color: #fff;
            }

        .btn {
            display: inline-block;
            padding: 14px 20px;
            font-size: 16px;
            border-radius: 4px;
            text-align: center;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.3s ease;
            font-weight: 500;
            margin-top: 15px;
            width: 100%;
            box-sizing: border-box;
        }

        .btn-primary {
            background-color: #d52b1e;
            color: white;
            border: none;
        }

            .btn-primary:hover {
                background-color: #b82217;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(213, 43, 30, 0.3);
            }

        .btn-secondary {
            background-color: #0056b3;
            color: white;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #003d82;
            }

        .alert {
            margin: 20px 0;
            padding: 15px;
            border-radius: 4px;
            font-size: 14px;
            text-align: left;
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
        }

        .alert-success {
            color: #155724;
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
        }

        .button-group {
            display: flex;
            gap: 15px;
            margin-top: 25px;
        }

        @@media (max-width: 768px) {
            .booking-container {
                padding: 30px 20px;
            }

            h1 {
                font-size: 20px;
            }

            .btn {
                padding: 12px;
                font-size: 15px;
            }
        }

        @@media (max-width: 576px) {
            body {
                padding: 15px;
            }

            .booking-container {
                padding: 25px 15px;
            }

            .button-group {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="booking-container">
        <h1>Редактировать окончательную заявку</h1>

        <form method="post" enctype="multipart/form-data">
            <input type="hidden" name="bookingId" value="@Model.ID" />

            <div class="form-group">
                <label for="excelFile">Excel файл (.xlsx):</label>
                <input type="file" id="excelFile" name="excelFile" accept=".xlsx" class="form-control" />
            </div>
@* 
            <div class="form-group">
                <label for="pdfFile">PDF файл (.pdf):</label>
                <input type="file" id="pdfFile" name="pdfFile" accept=".pdf" class="form-control" />
            </div> *@

            <button type="submit" class="btn btn-primary">Сохранить изменения</button>
            <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary" style="margin-left: 10px;">Назад</a>
        </form>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
        <div class="alert alert-success">@TempData["Success"]</div>
        }
    </div>

</body>
</html>
