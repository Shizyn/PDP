<!DOCTYPE html>
<html lang="ru">
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.7-beta.19/jquery.inputmask.min.js"></script>
    <link rel="stylesheet"
          href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Создать новую заявку</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to bottom, #0056b3 0%, #d52b1e 60%, #f0f6fc);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .booking-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 450px;
            text-align: center;
            border-top: 5px solid #0056b3;
        }

        h1 {
            font-size: 24px;
            color: #0056b3;
            margin-bottom: 25px;
            font-weight: 600;
        }

        .form-container {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

        label {
            font-weight: 500;
            color: #333;
            display: block;
            margin-bottom: 8px;
        }

        select, input {
            width: 100%;
            padding: 12px 15px;
            font-size: 16px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            box-sizing: border-box;
            transition: border-color 0.3s;
        }

            select:focus, input:focus {
                border-color: #0056b3;
                outline: none;
                box-shadow: 0 0 0 3px rgba(0, 86, 179, 0.1);
            }

        .btn-submit {
            background-color: #d52b1e;
            color: white;
            border: none;
            padding: 14px;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            font-weight: 600;
            transition: background-color 0.3s;
            margin-top: 10px;
        }

            .btn-submit:hover {
                background-color: #b82217;
            }

        .btn {
            display: inline-block;
            background-color: #0056b3;
            color: white;
            padding: 12px 20px;
            border-radius: 4px;
            text-decoration: none;
            font-weight: 500;
            transition: background-color 0.3s;
            margin-top: 15px;
        }

            .btn:hover {
                background-color: #003d82;
            }

        .alert {
            margin-top: 20px;
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            padding: 15px;
            border-radius: 4px;
            text-align: left;
        }

            .alert p {
                margin: 5px 0;
            }

        @@media (max-width: 768px) {
            .booking-container {
                padding: 25px;
                margin: 15px;
            }

            h1 {
                font-size: 22px;
            }

            select, input {
                padding: 10px 12px;
                font-size: 15px;
            }

            .btn-submit, .btn {
                padding: 12px;
                font-size: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="booking-container">
        <h1>Создать новую заявку</h1>
        <form method="post" class="form-container">
            <input type="hidden" name="eventType" value="@ViewBag.EventType" />
            <div class="form-group">
                <label for="kvantum">Выберите профпробу:</label>
                <select id="ProfProbaId" name="ProfProbaId" required>
                    <option value="">-- Выберите профпробу --</option> 
                    @foreach (var item in ViewBag.ProfProby)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>

            </div>
            <div class="form-group">
                <label for="event">Выберите событие:</label>
                <select id="EventId" name="eventId" required disabled>
                    <option value="">-- Сначала выберите квантум --</option>
                </select>
            </div>
            <div class="form-group">
                <label for="fullName">ФИО:</label>
                <input type="text" id="fullName" name="fullName" required />
            </div>
            @* <div class="form-group">
                <label for="birthDate">Дата рождения:</label>
                <input type="date" id="birthDate" name="birthDate" required max="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div> *@
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Укажите почту, которая была при авторизации" required />
            </div>

            <script type="text/javascript">
                $(document).ready(function () {
                    $("#phone").inputmask("8(999)-999-99-99");
                });
            </script>

            <div class="form-group">
                <label for="phone">Телефон:</label>
                <input type="tel" id="phone" name="phoneNumber" placeholder="8(XXX)-XXX-XX-XX" required />
            </div>           
            <div class="form-group">
                <label for="schoolName">Учебное заведение:</label>
                <input type="text" id="schoolName" name="schoolName" placeholder="Введите название вашего учебного заведения" required />
			</div>
            <div class="form-group">
                <label for="peopleCount">Количество человек:</label>
                <input type="number" id="peopleCount" name="peopleCount" min="1" max="30" required />
            </div>
            <div class="form-group">
                <label for="bookingDate">Дата бронирования:</label>
                <input id="bookingDate" name="bookingDate" type="text" class="form-control" placeholder="Выберите дату" required readonly />
            </div>
            <div class="form-group">
                <label for="timeRange">Время:</label>
                <select id="timeRange" name="timeRange" class="form-control" required disabled>
                    <option value="">-- Сначала выберите дату --</option>
                </select>
            </div>
            

            <button type="submit" class="btn-submit">Создать заявку</button>
            <a href="/Booking" class="btn btn-secondary" style="margin-left: 10px;">Вернуться назад</a>
        </form>
        <script type="text/javascript">
            $(function () {
                $("#phone").inputmask("8(999)-999-99-99");

                function clearAlerts() {
                    $('.field-validation-error, .alert').remove();
                }

                let availableDates = [];

                // Загрузка событий по профпробе
                $("#ProfProbaId").on("change", function () {
                    clearAlerts();
                    $("#EventId").empty().append('<option value="">Загрузка...</option>').prop("disabled", true);
                    $("#bookingDate").val("").prop("disabled", true).datepicker("destroy");
                    $("#timeRange").empty().append('<option value="">-- Сначала выберите дату --</option>').prop("disabled", true);

                    const profProbaId = $(this).val();
                    if (!profProbaId) return;

                    $.getJSON("/Booking/GetEventsByProfProba", { profProbaId: profProbaId })
                        .done(function (data) {
                            const $ev = $("#EventId").empty();
                            $ev.append('<option value="">Выберите событие</option>');
                            $.each(data, function (_, item) {
                                $ev.append($('<option>').val(item.id).text(item.name));
                            });
                            $ev.prop("disabled", false);
                        })
                        .fail(function () {
                            $("#EventId").empty().append('<option value="">Ошибка загрузки</option>');
                        });
                });

                // Загрузка доступных дат с учетом занятых
                $("#EventId").on("change", function () {
                    clearAlerts();
                    $("#bookingDate").val("").prop("disabled", true).datepicker("destroy");
                    $("#timeRange").empty().append('<option value="">-- Сначала выберите дату --</option>').prop("disabled", true);

                    const eventId = $(this).val();
                    const profProbaId = $("#ProfProbaId").val();

                    if (!eventId || !profProbaId) return;

                    $.getJSON("/Booking/GetAvailableDates", { profProbaId: profProbaId, eventId: eventId })
                        .done(function (data) {
                            availableDates = data;

                            $("#bookingDate").prop("disabled", false).datepicker({
                                dateFormat: "yy-mm-dd",
                                minDate: 0,
                                maxDate: "+1m",
                                beforeShowDay: function (date) {
                                    const day = date.getDay();
                                    const formatted = $.datepicker.formatDate("yy-mm-dd", date);
                                    return [(day === 2 || day === 4) && availableDates.includes(formatted)];
                                },
                                onSelect: function () {
                                    clearAlerts();
                                    $("#timeRange")
                                        .empty()
                                        .append('<option value="">Выберите время</option>')
                                        .append('<option value="12:00-14:00">12:00-14:00</option>')
                                        .prop("disabled", false);
                                }
                            }).attr("readonly", true);
                        })
                        .fail(function () {
                            $("#bookingDate").val("Ошибка загрузки дат").prop("disabled", true);
                        });
                });

                // Валидация формы
                $('form.form-container').on('submit', function (e) {
                    clearAlerts();
                    let valid = true;
                    const $date = $("#bookingDate");
                    const $time = $("#timeRange");

                    if ($date.prop("disabled") || !$date.val()) {
                        valid = false;
                        $date.after('<div class="field-validation-error" style="color:#d52b1e;font-size:13px;">Выберите дату!</div>');
                    }
                    if ($time.prop("disabled") || !$time.val()) {
                        valid = false;
                        $time.after('<div class="field-validation-error" style="color:#d52b1e;font-size:13px;">Выберите время!</div>');
                    }

                    if (!valid) e.preventDefault();
                });
            });
        </script>






        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
    </div>   
</body>
</html>
